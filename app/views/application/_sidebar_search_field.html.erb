<div class="c-sidebar_container__search">
    <%= form_for @search, url: board_path(@board), method: :get do |f| %>
        <% @search.tag_ids.each do |id|%>
            <%= hidden_field_tag "search[tag_ids][]", id %>
        <% end %>
        <% @search.source_ids.each do |id|%>
            <%= hidden_field_tag "search[source_ids][]", id %>
        <% end %>
        <%= fa_icon 'search' %>
        <%= f.text_field :query, placeholder: "Search for a quoteâ€¦" %>
        <%= f.submit "Search", class: 'submit', name: nil %>
    <% end %>
</div>
