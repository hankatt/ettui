<div class="c-sidebar_container__search">
    <%= form_for @search, url: filter_board_quotes_path(@board), method: :get do |f| %>
        <% @search.tag_ids.each do |id|%>
            <%= hidden_field_tag "search[tag_ids][]", id %>
        <% end %>
        <% @search.source_ids.each do |id|%>
            <%= hidden_field_tag "search[source_ids][]", id %>
        <% end %>
        
        <%= f.text_field :query, :placeholder => "Type to search" %>
        <%= f.submit "Search", :class => 'submit' %>
    <% end %>
</div>