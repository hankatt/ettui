<div class="sidebar-container list">
    <div class="header-container">
      <div class="search-field-container">
        <%= image_tag "search-black.png" %>
        <%= text_field_tag :search, params[:search], :placeholder => "Type to search", :class => "search-field" %>
        <%= submit_tag "Search", :name => nil, :class => 'submit' %>
      </div>
    </div>
    <div class="sidebar-content">
        <!-- SOURCES FILTER !-->
        <div class="sidebar-list-container">
          <ol class="sidebar-list status">
            <% if @unread.count > 0 %>
              <li class="sidebar-list-item">
            <% else %>
              <li class="sidebar-list-item disabled">
            <% end %>
              <%= check_box_tag "unread", true, false, :id => "filter-unread" %>
              <button class="section-title">
                <h4>Unread quotes</h4>
              </button>
              <div class="filter-count"><p><%= @unread.count %></p></div>
            </li>
          </ol>
        </div>
        <div class="sidebar-list-container sources">
          <div class="sidebar-section-title">
              <h4 class="section-title">Sites</h4>
              <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"width="18px" height="18px" viewBox="262.75 239.5 33 33" enable-background="new 262.75 239.5 33 33" xml:space="preserve">
              <polygon id="arrow-24-icon" points="263.25,251.829 268.806,246.247 279.25,256.643 289.695,246.247 295.25,251.829 279.25,267.753 "/>
              </svg>
          </div>
          <ol class="sidebar-list filters">
	           <% @sources.each do |source| %>
	                <%= render :partial => 'shared/source', locals: { source: source } %>
	           <% end %>
	        </ol>
        </div>
        
        <!-- TAGS FILTER !-->
        <div class="sidebar-list-container tags">
            <div class="sidebar-section-title">
                <h4 class="section-title">Tags</h4>
                <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"width="18px" height="18px" viewBox="262.75 239.5 33 33" enable-background="new 262.75 239.5 33 33" xml:space="preserve">
                <polygon id="arrow-24-icon" points="263.25,251.829 268.806,246.247 279.25,256.643 289.695,246.247 295.25,251.829 279.25,267.753 "/>
                </svg>
            </div>
            <ol class="sidebar-list tags">
            <% @board.owned_tags.each do |tag| %>
                <%= render :partial => 'shared/tag', locals: { tag: tag } %>
            <% end %>
          </ol>
        </div>
    </div><!-- .sidebar-content !-->
    <div class="sidebar-content-fixed">
      <%= link_to "Logout", logout_path %>
    </div>
</div><!-- .sidebar-container !-->