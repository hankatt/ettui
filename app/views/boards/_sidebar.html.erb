<div class="c-sidebar_container t-white">
    <div class="icon-menu js-toggle-menu"></div>
    <div class="c-sidebar_container__header">
        <h1 class="subtitle--all-caps">Search</h1>
    </div>
    <%= render partial: "sidebar_search_field" %>

    <!-- SOURCES !-->
    <div class="c-sidebar_container__header js-toggle-sidebar">
        <h1 class="subtitle--all-caps">Filter by sites</h1>
        <%= fa_icon 'angle-down' %>
    </div>
    <%= render partial: "sidebar_filter_list",
        locals: {
            filters: @sources
        }
    %>

    <!-- TAGS !-->
    <div class="c-sidebar_container__header js-toggle-sidebar">
        <h1 class="subtitle--all-caps">Filter by tags</h1>
        <%= fa_icon 'angle-down' %>
    </div>
    <%= render partial: "sidebar_filter_list",
        locals: {
            filters: @board.unique_tags,
        }
    %>

    <div class="c-sidebar_container__row final u-text-align-center">
        <% if current_user %>
            <%= link_to image_tag(current_user.twitter_image_url, class: "a-profile_image"), profile_path %>
            <%= link_to "Logout", logout_path, class: "subtitle--all-caps c-button--text--secondary" %>
        <% end %>
        <%= link_to "ettÃºi", root_url, class: "c-ettui-logo" %>
    </div>
</div>
