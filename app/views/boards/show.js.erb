//Rebuild grid with new elements
var $container = $(".quotes-list");
$container.html('');

var $new_quotes = "<%= escape_javascript(render(@quotes)) %>";
$container.prepend($new_quotes);

search_query = $("#search").val();
quotes = $(".quote .quote-content p");
quotes.unhighlight().highlight(search_query);

<% if defined?(@nothingUnread) %>
	<% if @nothingUnread %>
		$(".sidebar-list.status > li").addClass('disabled');
		$(".sidebar-list.status .filter-count > p").text(0);
	<% end %>
<% end %>

// Trigger DOMChange to assure jQuery events trigger on newly appended tag
$(document).trigger('DOMChange');

