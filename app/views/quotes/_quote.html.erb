<% if quote.text.length < 132 %>
  <div class="clearfix small white box size11 q-<%= quote.id %>">
<% elsif quote.text.length < 240 %>
  <div class="clearfix white box size11 q-<%= quote.id %>">
<% else %>
  <div class="clearfix big white box size11 q-<%= quote.id %>">
<% end %>

