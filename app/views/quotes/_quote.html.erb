<li class="<%= quote.classes_for(current_user) %>" data-qid="<%= quote.id %>">
    <div class="quote-metadata">
        <div class="quote-source-title-container">
            <%= image_tag quote.favicon, :class => "source-favicon" %>
            <div class="quote-source-title-data-wrapper">
              <% if quote.readability_title %>
                <%= link_to quote.truncated_readability_title, quote.url, :class => "quote-source-title" %>
              <% else %>
                <%= link_to quote.url, :class => "quote-source-title" %>
              <% end %>
              <div class="quote-source-status-new hidden"></div>
              <div class="quote-source-data-container">
                <p class="quote-source-hostname"><%= quote.source.hostname %></p>
                <% if quote.readability_author %>
                  <p class="quote-source-author">by <%= quote.readability_author %></p>
                <% end %>
                <p class="quote-source-date visible"><%= quote.source_date %></p>
              </div>
            </div>
        </div>
    </div>
    <div class="quote-content <%= quote.font_size %>">
      <p><%= quote.text %></p>
    </div>
    <div class="quote-metadata">
      <div class="quote-actions">
          <ul class="quote-tags">
            <% quote.unique_tags.each do |tag| %>
              <%= render 'quotes/tag', locals: { quote: quote, tag: tag } %>
            <% end %>
          </ul>
          <%= link_to I18n.t(".add_a_tag"), "/tag/#new", :class => "append-tag small button", :title => "Add tag" %>
        </div>
        <%= link_to "Â· Â· Â·", quote, :class => "small button view" %>
      </div>
  </li>