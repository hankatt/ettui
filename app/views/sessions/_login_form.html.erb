
<h1 class="bold">Sign in here</h1>
<%= form_tag sessions_path do %>
	<div class="field">
		<%= text_field_tag :email, params[:email], :placeholder => "Electronic mail address" %>
	</div>
	<div class="field">
		<%= password_field_tag :password, params[:id], :placeholder => "Password" %>
	</div>
	<div class="actions">
		<%= submit_tag "", :id => "submit_login" %>
	</div>
<% end %>