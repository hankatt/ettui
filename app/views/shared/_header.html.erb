<header>
    	<a href="/" id="logo-container">
	        <div></div>
		</a>
		<% if !current_user %>
		    <div class="inline link">
		        <p>Have an account?</p><%= link_to " Sign in", login_path %>
		    </div>
		<% else %>
			<div class="inline link">
				<%= image_tag current_user.twitter_image_url %><%= link_to current_user.name || current_user.email, boards_path, :class => "profile-name" %>
			</div>
		<% end %>
</header>