<h1 class="white mbottom bold">Recent quotes from other users</h1>
<div id="quotes-container">
  <% if !@quotes.nil? %>
  	<% @quotes.each do |quote| %>
  		<div class="quote pimp grey-<%= quote.id % 3 %> q-<%= quote.id %>">
        <h1>12.04.17</h1>
        <% if quote.text.length < 67 %>
          <p class="big"><%= quote.text %></p>
        <% elsif quote.text.length > 269 %>
          <p class="small"><%= quote.text %></p>
        <% else %>
          <p><%= quote.text %></p>
        <% end %>
        <div class="quote-details" style="display: block;">
          <p class="tiny">Quoted by <%= quote.user.email || quote.user.name %></p>
        </div>
  		</div>
  	<% end %>
  <% end %>
</div>