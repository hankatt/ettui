<div class="signup-wrapper">
	<div class="signup-container">
		<h1>A simple tool that helps you keep track of memorable reads.</h1>
		<%= link_to "Sign up with Twitter", "/auth/twitter?image_size=original", class: "twitter signup button" %>
		<%= link_to "Sign up using your email", "#!", class: "email signup button" %>
		<div class="signup-with-email">
			<%= form_for @user do |f| %>
				<%= f.hidden_field :new_user, :value => true %>
				<div class="field">
					<%= f.text_field :email, :placeholder => "Electronic mail address" %>
				</div>
				<div class="field">
					<%= f.password_field :password, :placeholder => "Password" %>
				</div>
				<div class="field">
					<%= f.password_field :password_confirmation, :placeholder => "Password again" %>
				</div>
				<div class="actions">
					<%= f.submit "Create my account", :id => "submit_signup" %>
				</div>
			<% end %>
		</div>
		<%= link_to "Existing user? Sign in here.", login_path, :class => "active login" %>
		<footer>
			<a href="#">About</a>
			<a href="#">Press</a>
		</footer>
	</div>
</div>
<div class="notedapp-splash">
</div>