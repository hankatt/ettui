<div class="signup-wrapper">
  <div class="signup-container">
    <h1>Signing up.</h1>
    <%= link_to "Sign up with Twitter", "/auth/twitter?image_size=original", class: "twitter button" %>
    <p class="supportive">Or using email</p>
    <div class="signup-with-email">
      <%= form_for @user do |f| %>
        <%= f.hidden_field :new_user, :value => true %>
        <div class="field">
          <%= f.text_field :email, :placeholder => "Electronic mail address" %>
        </div>
        <div class="field">
          <%= f.password_field :password, :placeholder => "Password" %>
        </div>
        <div class="field">
          <%= f.password_field :password_confirmation, :placeholder => "Password again" %>
        </div>
        <div class="actions">
          <%= f.submit "Create my account", :class => "button", :id => "submit_signup" %>
        </div>
      <% end %>
    </div>
    <%= link_to "Existing user? Login here.", login_path, :class => "login" %>
    <footer>
      <a href="#">About</a>
      <a href="#">Press</a>
    </footer>
  </div>
</div>